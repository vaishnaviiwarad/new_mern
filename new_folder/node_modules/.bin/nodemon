#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/c/pnpm-store/nodemon@3.1.11/node_modules/nodemon/bin/node_modules:/mnt/c/pnpm-store/nodemon@3.1.11/node_modules/nodemon/node_modules:/mnt/c/pnpm-store/nodemon@3.1.11/node_modules:/mnt/c/pnpm-store/node_modules"
else
  export NODE_PATH="/mnt/c/pnpm-store/nodemon@3.1.11/node_modules/nodemon/bin/node_modules:/mnt/c/pnpm-store/nodemon@3.1.11/node_modules/nodemon/node_modules:/mnt/c/pnpm-store/nodemon@3.1.11/node_modules:/mnt/c/pnpm-store/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../nodemon/bin/nodemon.js" "$@"
else
  exec node  "$basedir/../nodemon/bin/nodemon.js" "$@"
fi
